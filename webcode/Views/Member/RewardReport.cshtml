                    <table id="cmDataTable" class="display table" cellspacing="0" width="100%">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Designation</th>
                                <th>Requirement</th>
                                <th>Gift</th>
                                <th>Start Date</th>
                                <th>Reward Status</th>
                                <th>Achieve</th>
                            </tr>
                        </thead>

                        <tbody>
                            @{
                                var i = 0;
                                foreach (DataRow dr in (ViewData["_report"] as DataTable).Rows)
                                {
                                    i++;
                                    <tr>
                                        <th>@i</th>
                                        <td><p>@dr["Designation"].ToString()</p></td>
                                        <td><p>@dr["Requirement"].ToString()</p></td>
                                        <td><p>@dr["Gift"].ToString()</p></td>
                                        <td><p>@dr["Startdate"].ToString()</p></td>
                                        <td><p>@dr["Status"].ToString()</p></td>
                                        <td><p>@dr["Achievedate"].ToString()</p></td>
                                    </tr>
                                }
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>




    </div>

