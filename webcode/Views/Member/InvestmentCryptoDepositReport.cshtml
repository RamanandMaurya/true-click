                    <table id="cmDataTable" class="display table" cellspacing="0" width="100%">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Inv. Date</th>
                                <th>Inv. Amount</th>
                                <th>Coin Rate</th>
                                <th>Maturity Coin</th>
                                <th>Maturity Date</th>
                            </tr>
                        </thead>

                        <tbody>
                            @{
                                var i = 0;
                                foreach (DataRow dr in (ViewData["_report"] as DataTable).Rows)
                                {
                                    i++;
                                    <tr>
                                        <td>@i</td>
                                        <td><p>@dr["Bookdate"].ToString()</p></td>
                                        <td data-dolor="$">@dr["InvestmentAmount"].ToString()</td>
                                        <td>$ @dr["CoinRate"].ToString()</td>
                                        <td>@dr["MaturityCoin"].ToString()</td>
                                        <td>@dr["MaturityDate"].ToString()</td>
                                    </tr>
                                }
                            }

                        </tbody>
                        <tfoot>
                            <tr>
                                <td></td>
                                <td>Totals</td>
                                <td data-dolor="$"></td>
                                <td></td>
                                <td></td>
                                <td></td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>




    </div>

