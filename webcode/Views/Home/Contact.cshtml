<section class="section-spacing contact-page-form">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <div class="main-fomr-title text-center">
                    <h2>Contact us<span></span></h2>
                </div>
            </div>
        </div>
        <div class="row align-items-center justify-content-center">
            <div class="col-md-10 col-sm-12 col-lg-6">
                <form method="post" name="enq">
                    <div class="footer-form-inner">
                        <div class="cm-form-group col2-devide">
                            <div class="dol6-form-itm">
                                <label>Frist Name</label>
                                <input type="text" placeholder="Frist Name" class="cm-form-control" name="name">
                            </div>
                            <div class="dol6-form-itm">
                                <label>Last Name</label>
                                <input type="text" placeholder="Last Name" class="cm-form-control" name="name">
                            </div>
                        </div>
                        <div class="cm-form-group">
                            <label>Email Address</label>
                            <input type="email" required="required" placeholder="Email Address" id="email" class="cm-form-control" name="email">
                        </div>
                        <div class="cm-form-group">
                            <label>Your Message</label>
                            <textarea required="required" placeholder="Your Message" class="cm-form-control" name="message" rows="2"></textarea>
                        </div>
                        @*<div class="term-condition">
                            <div class="check-condition"><input type="checkbox" id="switch"><label class="switch-style" for="switch">I agree to the Terms and Conditions.</label></div>
                        </div>*@
                        <div class="footer-btn-wrap">
                            <button type="submit" title="Submit Your Message!" class="site-btn get-intouch-btn" name="submit" value="Submit">SEND MESSAGE</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>