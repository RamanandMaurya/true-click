<script src="~/assets/js/jquery.min.js"></script>
<script>
  $(document).ready(function () {
    var GiftId = $('#hf_giftid').val();

    if (GiftId == '1') {
      $('#modal_car').addClass('popup-active');
    }
    else if (GiftId == '2') {
      $('#modal_bike').addClass('popup-active');
    }
    else if (GiftId == '3') {
      $('#modal_mobile').addClass('popup-active');
    }
    else if (GiftId == '4') {
      $('#modal_coin').addClass('popup-active');
    }
    else if (GiftId == '5') {
      $('#modal_microwave').addClass('popup-active');
    }
    else if (GiftId == '6') {
      $('#modal_induction').addClass('popup-active');
    }
    else if (GiftId == '7') {
      $('#modal_bag').addClass('popup-active');
    }
    else {
      $('#modal_car').addClass('popup-active');
    }


    $('#btn_car').click(function () {
      $('.modal-container').removeClass('popup-active');
      $('#modal_car').addClass('popup-active');
      return false;
    });

    $('#btn_bike').click(function () {
      $('.modal-container').removeClass('popup-active');
      $('#modal_bike').addClass('popup-active');
      return false;
    });

    $('#btn_mobile').click(function () {
      $('.modal-container').removeClass('popup-active');
      $('#modal_mobile').addClass('popup-active');
      return false;
    });

    $('#btn_coin').click(function () {
      $('.modal-container').removeClass('popup-active');
      $('#modal_coin').addClass('popup-active');
      return false;
    });

    $('#btn_microwave').click(function () {
      $('.modal-container').removeClass('popup-active');
      $('#modal_microwave').addClass('popup-active');
      return false;
    });

    $('#btn_induction').click(function () {
      $('.modal-container').removeClass('popup-active');
      $('#modal_induction').addClass('popup-active');
      return false;
    });

    $('#btn_bag').click(function () {
      $('.modal-container').removeClass('popup-active');
      $('#modal_bag').addClass('popup-active');
      return false;
    });
  });
</script>