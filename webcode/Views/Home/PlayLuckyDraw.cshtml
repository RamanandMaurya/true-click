<div id="modal_car" class="modal-container">
  @{
    if (@ViewData["AltoCarStatus"] != null)
    {
      if (@ViewData["AltoCarStatus"].ToString() == "0")
      {
        <div class="modal-content firstModel">
          @using (Html.BeginForm())
          {
            <div class="modal-body">
              <h1><span>BAAP Network</span> Lucky Draw</h1>
              <img src="~/assets/images/winner-image/lucky/Alto-winner.png">
              <button type="submit" id="btnStart_car" name="start" value="car">Start</button>
            </div>
          }

        </div>
      }
      else
      {
        <div class="modal-content secondModel">
          <h4><img src="~/assets/images/winner-image/congratulations.png">Congratulations <img src="~/assets/images/winner-image/congratulations.png"></h4>
          <h6>you are the lucky winner</h6>
          <div class="modal-body">
            <div class="main-model-price">
              <div class="model-price-image">
                <img src="~/assets/images/winner-image/car.png">
              </div>
              <div class="model-price-coin">
                <h1>Alto Car</h1>
              </div>
              <div class="model-price-member">
                <h2>01</h2>
                <p>Member</p>
              </div>
            </div>
            @if (ViewData["_report_altocar"] != null)
            {
              @foreach (DataRow dr in (ViewData["_report_altocar"] as DataTable).Rows)
              {
                <div class="modelprice-members-details">
                  <div class="left-winner-member">
                    <h1>@dr["Fullname"].ToString()</h1>
                    <p>@dr["Email"].ToString()</p>
                  </div>
                  <div class="member-unique-code">
                    <h2>@dr["UniqueCode"].ToString()</h2>
                    <p>Unique Code</p>
                  </div>
                </div>
              }
            }
          </div>
        </div>
      }
    }
  }
</div>
