@using System.Data;
@using System.Data.SqlClient;
@{

  Layout = "~/Views/Shared/_HOLayout.cshtml";
  var _profile = ViewData["_Profiledetails"] as DataTable;
}

<div class="dashboard-center">
  <div class="custom-breadcrumb">
    <ol class="cd-breadcrumb">
      <li><a href="#">Dashboard</a></li>
      <li><a href="#0">Profile</a></li>
    </ol>
  </div>
  <form enctype="multipart/form-data" method="post">
    @using (Html.BeginForm())
    {
      <div class="dashboard-center-itm">
        <div class="prasonal-dd shadow-custom">
          <div class="prasonal-form form-main-border">
            <div class="pre-title-ue">Personal Info</div>
            <div class="form-main">
              <div class="login-intup col-ff5">
                <span>First Name</span>
                <input type="text" name="firstname" id="firstname" value="@_profile.Rows[0]["firstname"]" class="login-inp">
              </div>
              <div class="login-intup col-ff5">
                <span>Last Name</span>
                <input type="text" name="lastname" id="lastname" value="@_profile.Rows[0]["Lastname"]" class="login-inp">
              </div>
              <div class="login-intup col-ff5">
                <span>Email</span>
                <input type="text" name="email" id="email" value="@_profile.Rows[0]["Email"]" class="login-inp">
              </div>
              <div class="login-intup col-ff5" style="display:none;">
                <span>Date of Birth</span>
                <input type="date" name="dob" id="dob" class="login-inp">
              </div>
              <div class="login-intup col-ff5">
                <span>Contact No</span>
                <input type="text" name="mobile" id="mobile" value="@_profile.Rows[0]["Mobile"]" class="login-inp">
              </div>
              <div class="login-intup col-ff5">
                <div class="custom-select">
                  <span>Gender</span>
                  <select id="gender" name="gender">
                    <option value="0">Male</option>
                    <option value="1">Female</option>
                  </select>
                </div>
              </div>
              <div class="login-intup col-ff5">
                <div class="edit-p-detail"><button type="submit" class="admin-btn" id="btnSubmit" name="submit">Update</button></div>
                <br />
                @{
                  string err = "";
                  if (ViewData["_ErrorMessage"] != null)
                  {
                    err = ViewData["_ErrorMessage"].ToString();
                  }
                }
                <label id="lblerr" style="color:#cb0f0f">@err</label><br />
              </div>
            </div>
          </div>
          <div class="prasonal-form">
            <div class="pre-title-ue">Login Password</div>
            <div class="form-main form-main-border">
              <div class="login-intup col-ff5">
                <span>Password</span>
                <input type="text" name="password" id="password" class="login-inp" value="@_profile.Rows[0]["password"]">
              </div>

              <div class="login-intup col-ff5">
                <div class="edit-p-detail edit-p-detail-padd"><button type="submit" class="admin-btn" id="adminPassword" formaction="/HO/adminPassword" value="adminPassword" name="submit">Update</button></div>

                <label id="lblerr" style="color:#cb0f0f"></label><br />
              </div>

            </div>
          </div>
          <div class="prasonal-form">
            <div class="pre-title-ue">Security Pin</div>
            <div class="form-main form-main-border">
              <div class="login-intup col-ff5">
                <span>Security</span>
                <input type="text" name="epassword" id="epassword" class="login-inp" value="@_profile.Rows[0]["epassword"]">
              </div>

              <div class="login-intup col-ff5">
                <div class="edit-p-detail edit-p-detail-padd"><button type="submit" class="admin-btn" id="adminMpin" value="adminMpin" formaction="/HO/adminMpin" name="submit">Update</button></div>

                <label id="lblerr" style="color:#cb0f0f"></label><br />
              </div>

            </div>
          </div>
        </div>
      </div>
      <div class="dashboard-center-itm" style="display:none;">
        <div class="prasonal-dd shadow-custom">

          <div class="prasonal-form">
            <div class="pre-title-ue">KYC Info</div>
            <div class="form-main">
              <div class="login-intup has-multiple col-ff">
                <div class="pre-title-ue">Coming Soon. !</div>
              </div>
            </div>
          </div>
        </div>
      </div>
    }
  </form>
</div>